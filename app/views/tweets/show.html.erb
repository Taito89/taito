<h1>GeekTwitter</h1>
<h3>Tweet詳細</h3>

<div class="tweet">
  <p><%= @tweet.content %></p>
  <p><%= @tweet.created_at %></p>
  <p><%= @tweet.user.email %></p>
  <p><%= @tweet.genre %></p>
  <p><%= @tweet.place %></p>

  <% if user_signed_in? %>
    <% if current_user.already_liked?(@tweet) %>
      <%= button_to tweet_taito_like_path(tweet_id: @tweet.id, id: @tweet.id), method: :delete do %>
        <i class="fas fa-heart"></i> <%= @tweet.taito_likes.count %>
      <% end %>
    <% else %>
      <%= button_to tweet_taito_likes_path(tweet_id: @tweet.id), method: :post do %>
        <i class="fas fa-heart"></i> <%= @tweet.taito_likes.count %>
      <% end %>
    <% end %>
  <% else %>
    <i class="fas fa-heart"></i> <%= @tweet.taito_likes.count %>
  <% end %>

  <%= link_to "編集する", edit_tweet_path(@tweet.id) %>
</div>

<h2>いいねしたユーザー</h2>
<ul>
  <% @tweet.liked_users.each do |user| %>
    <li><%= user.email %></li>
  <% end %>
</ul>

<div class="comment-wrapper">
  <p>コメント一覧</p>
  <% @comments.each do |c| %>
    <div>
      <%= c.user.email unless c.user.blank? %>
      <br>
      <%= c.content %>
    </div>
      <br>
  <% end %>

  <% if user_signed_in? %>
    <%= form_with(model: [@tweet, @comment], local: true) do |f| %>
      <%= f.text_area :content %>
      <%= button_tag type: "submit" do %>
        <i class="far fa-comments"></i> コメントする
      <% end %>
    <% end %>
  <% end %>
</div>

<% @tweet.tags.each do |tag| %>
    <span><%= tag.name %></span>
<% end %>

<%= link_to "Tweet一覧に戻る", tweets_path %>
